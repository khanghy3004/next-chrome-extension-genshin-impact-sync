{
  "manifest_version": 3,
  "name": "Genshin Impact Sync",
  "short_name": "G-Y-S",
  "version": "1.0.1",
  "description": "Genshin Impact Sync with your HoyoLab account",
  "icons": {
    "16": "/icons/icon16.png",
    "32": "/icons/icon32.png",
    "48": "/icons/icon48.png",
    "192": "/icons/icon192.png"
  },
  "permissions": [
    "cookies",
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "index.html"
  }
}
